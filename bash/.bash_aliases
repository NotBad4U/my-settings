alias c='clear'
alias e='exit'
## get rid of command not found ##
alias cd..='cd ..'

## a quick way to get out of current directory ##
alias ..='cd ..'
alias ...='cd ../../../'
alias ....='cd ../../../../'
alias .....='cd ../../../../'
alias .4='cd ../../../../'
alias .5='cd ../../../../..'

alias mount='mount |column -t'

# handy short cuts #
alias h='history'
alias j='jobs -l'

alias ports='netstat -tulanp'

alias meminfo='free -m -l -t'
alias cpuinfo='lscpu'
